.nested-fields
  %tr
    %td.width20
      = f.select :item_id, get_items, {include_blank: true}, class: "width20 selectclass"
    %td.width30
      =f.text_field :description, class: "width30"
    %td.width10
      = f.text_field :price, class: "width10 priceclass"
    %td.width10
      = f.text_field :quantity, class: "width10 quantityclass"
    %td.width10
      = f.text_field :line_total, class: "width10"
    %td.width20
      = link_to_remove_association "remove line items", f, { class: "width20 remove_items" }