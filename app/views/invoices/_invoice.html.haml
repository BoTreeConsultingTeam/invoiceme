%tr
  %td= invoice.invoice_number
  %td= invoice.client.name
  %td= invoice.paid_to_date.strftime("%d/%m/%Y") if invoice.paid_to_date.present?
  %td= invoice.date_of_issue.strftime("%d/%m/%Y") if invoice.date_of_issue.present?
  %td= invoice.total_amount.to_s
  %td= invoice.status.to_s
  %td
    = link_to invoice_path(invoice) do
      %i.fa.fa-eye
    = link_to edit_invoice_path(invoice) do
      %i.fa.fa-edit
    = link_to invoice_path(invoice), method: :delete, data: { confirm: "Are you sure?" } do
      %i.fa.fa-trash-o