%tr
  %td= invoice.invoice_number
  %td= invoice.client.name
  %td= l invoice.paid_to_date if invoice.paid_to_date.present?
  %td= l invoice.date_of_issue if invoice.date_of_issue.present?
  %td= "#{invoice.currency_code.upcase} #{number_with_precision(invoice.total_amount, precision: 2)}"
  %td= invoice.status.to_s
  %td
    = link_to invoice_path(invoice) do
      %i.fa.fa-eye
    = link_to edit_invoice_path(invoice) do
      %i.fa.fa-edit
    = link_to invoice_path(invoice), method: :delete, data: { confirm: "Are you sure?" } do
      %i.fa.fa-trash-o
    = link_to "Payments", invoice_payments_path(invoice)