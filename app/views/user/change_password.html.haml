%section.content
  %h3 Change Password
  .row
    .col-md-6
      .box.box-primary
        .box-body
          = form_for current_user, :url => :update_change_password, html: { method: :post } do |f|
            .box-body
              .form-group
                = label_tag :current_password
                = f.password_field "current_password", class: 'form-control', placeholder: 'Enter password'
              .form-group
                = label_tag :new_password
                = f.password_field "password", class: 'form-control', placeholder: 'Enter password'
              .form-group
                = label_tag :new_password_confirmation
                = f.password_field "password_confirmation", class: 'form-control', placeholder: 'Enter new confirm password'
            .box-footer
              = f.submit "save", class: "btn btn-primary", id: "submit_button", data: { disable_with: "Please wait..." }