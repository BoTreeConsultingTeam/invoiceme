.row
  .col-xs-12
    .col-xs-2
      = f.label :email
    .col-xs-10
      = f.email_field :email, autofocus: true, class: "col-xs-10 col-sm-5"
.spacer10
- if f.object.new_record?
  .row
    .col-xs-12
      .col-xs-2
        = f.label :password
      .col-xs-10
        = f.password_field :password, autocomplete: "off", class: "col-xs-10 col-sm-5"
  .spacer10
  .row
    .col-xs-12
      .col-xs-2
        = f.label :password_confirmation
      .col-xs-10
        = f.password_field :password_confirmation, autocomplete: "off", class: "col-xs-10 col-sm-5"
  .spacer10
.row
  .col-xs-12
    .col-xs-2
      = f.label :first_name
    .col-xs-10
      = f.text_field :first_name, class: "col-xs-10 col-sm-5"
.spacer10
.row
  .col-xs-12
    .col-xs-2
      = f.label :last_name
    .col-xs-10
      = f.text_field :last_name, class: "col-xs-10 col-sm-5"
.spacer10
.row
  .col-xs-12
    .col-xs-2
      = f.label :role
    .col-xs-10
      = f.select(:role, get_roles, :include_blank => false, class: "col-xs-10 col-sm-5")
.spacer10