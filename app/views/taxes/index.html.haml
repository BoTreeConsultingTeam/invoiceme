%section.content-header
  %h1.pull-left Taxes
  .pull-right= link_to "New Tax", new_tax_path, class: 'btn btn-primary btn-flat'
  .spacer20
%section.content
  .spacer5
  .row
    .col-md-12
      .box
        .box-body
          - if @taxes.present?
            %table.table.table-bordered
              %tbody
                %tr
                  %th Name
                  %th Rate
                  %th Description
                  %th Parent
                  %th Actions
                = render @taxes
          - else
            %h3.not_records_found_h3 No Tax Found.