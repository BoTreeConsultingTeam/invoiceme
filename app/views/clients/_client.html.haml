%tr
  %td= client.name
  %td= client.currency_code
  %td= client.address_street_1
  %td= client.address_street_2
  %td= client.address_city
  %td= client.address_state
  %td= client.address_pincode
  %td= country_name(client.address_country_code)
  %td
    %div 
      = link_to "Edit", edit_client_path(client) 
      = link_to "Delete", client_path(client), 'data-confirm' => 'Are you sure?', method: :delete