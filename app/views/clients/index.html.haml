%section.content-header
  %h1.span_display_align Clients
  %span.span_display_right= link_to 'New Client', new_client_path, class: 'btn btn-sm btn-primary'
%section.content
  .spacer5
  .row
    .col-md-12
      .box
        .box-body
          - if @clients.present? 
            %table.table.table-bordered
              %tbody
                %tr
                  %th
                    Sr. #
                  %th.client_td_width
                    Name
                  %th
                    Location
                  %th
                    Contact
                  %th
                    Email
                  %th
                    Mobile
                  %th
                    Actions
                - @i = 1
                = render @clients
          - else
            %h3 No Client Found. 