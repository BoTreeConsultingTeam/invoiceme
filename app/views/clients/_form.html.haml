= simple_form_for @client do |f|
 
  %h3 Client
  .field
    = label_tag :name, "Name"
    %br/
    = text_field_tag "client[name]", @client.name
    %br/
  .field
    = label_tag :currency, "Currency"
    %br/
    = currency_select("client", "currency_code", {selected: @client.currency_code})
    %br/

  %h3 Client Address Details

  = f.fields_for :address do |f1|
        
    .field
      = label_tag :address_street_1, "Street1"
      %br/
      = f1.text_field "street_1"
      %br/

    .field
      = label_tag :address_street_2, "Street2"
      %br/ 
      = f1.text_field "street_2"
      %br/

    .field
      = label_tag :address_city, "city"
      %br/
      = f1.text_field "city"
      %br/

    .field
      = label_tag :address_state, "State"
      %br/
      = f1.text_field "state"
      %br/

    .field
      = label_tag :address_pincode, "Pincode"
      %br/
      = f1.text_field "pincode"
      %br/

    .field
      = label_tag :address_country, "Country"
      %br/
      = country_select("client[address_attributes]", "country_code", {selected: @address.country_code}, {class: "form-control"})
      %br/
      %br/
      = hidden_field_tag "address_id", @address.id

  %button.btn.btn-sm.btn-primary{:type => "submit"}
    %i.icon-ok
      Save 