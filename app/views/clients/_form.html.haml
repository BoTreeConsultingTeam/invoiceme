.form-group
  = f.label :name, "Name"
  %span.mandatory-field-color *
  = f.text_field :name, class: 'form-control', placeholder: 'Enter name'
.form-group
  = f.label :currency, "Currency"
  %span.mandatory-field-color *
  = currency_select("client", "currency_code", { selected: @client.currency_code}, {}, class: 'form-control')
%h3 Address
= f.fields_for :address do |address_form|
  .form-group
    = address_form.label :street_1, "Street1"
    %span.mandatory-field-color *
    = address_form.text_field :street_1, class: 'form-control', placeholder: 'Enter street 1'
  .form-group
    = address_form.label :street_2, "Street2"
    = address_form.text_field :street_2, class: 'form-control', placeholder: 'Enter street 2'
  .form-group
    = address_form.label :city, "city"
    %span.mandatory-field-color *
    = address_form.text_field :city, class: 'form-control', placeholder: 'Enter city'
  .form-group
    = address_form.label :state, "State"
    %span.mandatory-field-color *
    = address_form.text_field :state, class: 'form-control', placeholder: 'state'
  .form-group
    = address_form.label :pincode, "Pincode"
    %span.mandatory-field-color *
    = address_form.text_field :pincode, class: 'form-control', placeholder: 'pincode'
  .form-group
    = address_form.label :address_country, "Country"
    %span.mandatory-field-color *
    = country_select("client[address_attributes]", "country_code", {selected: address_form.object.country_code}, {class: "form-control"})