- if current_user.company.present?
  %section.content-header
    %h1
      New Client
  %section.content
    .row
      = simple_form_for @client do |f|
        .col-md-6
          .box.box-primary
            .box-body
              = render "form", f: f
        .col-md-6
          .box.box-primary
            .box-body
              = render "contact", f: f
        .col-md-12
          .div
            = f.submit "Save", class: 'btn btn-primary', id: "submit_button"
- else
  %section.content-header
    %h1 You need to create company first.
