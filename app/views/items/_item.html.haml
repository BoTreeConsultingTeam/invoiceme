%tr
  %td.width90= item.name
  %td= number_with_precision(item.price, precision: 2)
  %td.text-center
    = link_to edit_item_path(item), data: { toggle: :modal, remote: true } do
      %i.fa.fa-edit
    &nbsp;&nbsp;
    = link_to item_path(item), method: :delete, data: { confirm: "Are you sure?" } do
      %i.fa.fa-trash-o