%section.content-header
  %h1
    Sign up
%section.content
  .row
    .col-md-6
      .box.box-primary
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .box-body
            .form-group
              = f.label :email
              = f.email_field :email, autofocus: true, id: 'exampleInputEmail1', class: 'form-control', placeholder: 'Enter email'
            .form-group
              = f.label :password
              - if @validatable
                %em
                  (#{@minimum_password_length} characters minimum)
              = f.password_field :password, id: 'exampleInputEmail1', class: 'form-control', placeholder: 'Enter password'
            .form-group
              = f.label :password_confirmation
              = f.password_field :password_confirmation, id: 'exampleInputEmail1', class: 'form-control', placeholder: 'Enter confirm password'
          .box-footer
            = f.submit "Sign up", class: 'btn btn-primary'
        = render "devise/shared/links"