.login-box-body
  %h4.login-box-msg= t('change_password.captions.header')
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    = devise_error_messages!
    = f.hidden_field :reset_password_token
    .form-group.has-feedback
      = f.password_field :password, autofocus: true, class: 'form-control', placeholder: t('change_password.captions.new_password')
      %span.glyphicon.glyphicon-envelope.form-control-feedback
    .form-group.has-feedback
      = f.password_field :password, class: 'form-control', placeholder: t('sign_up.captions.confirm_password')
      %span.glyphicon.glyphicon-lock.form-control-feedback
    .row
      .col-xs-8
        .checkbox.icheck
          %label
            = f.submit t('change_password.captions.button.change_password'), class: 'btn btn-primary btn-block btn-flat', data: { disable_with: 'Changing...' }
  = render 'devise/shared/links'